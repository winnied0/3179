{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Area burnt by bushfires in Australia during the 2019-20 bushfire season (in ha)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/winnied0/3179/refs/heads/main/week9hw/data/ne_50m_admin%20(1).json",
    "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/winnied0/3179/refs/heads/main/week9hw/data/Normalised_Bushfire_19_v2.csv"
        },
        "key": "State",
        "fields": ["Area"]
      }
    },
    {"calculate": "datum.Area * 1", "as": "Area Burnt"} 
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Area Burnt",
      "type": "quantitative",
      "scale": {
        "type": "linear", 
        "domain": [0, 2, 5, 6, 20],  
        "range": ["#ffffb2", "#ffb94c", "#ff7518", "#e63600", "#7f0000"]

      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Area Burnt", "type": "quantitative", "title": "Percentage of State Area Burnt"}
    ]
  }
}
